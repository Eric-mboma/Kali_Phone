function dependance {
echo ""
read -p "Appuyer sur o pour installer Kali, n pour pour quitter !!! [o/n] (connexion requise) : " dep

if [ "$dep" = "o" ];then
apt update   
apt upgrade
apt install wget
apt wget -O install-nethunter-termux https://offs.ec/2MceZWr
else
echo "A Bient√¥t !"
fi
}


dependance
